/**
 * BasicMessage as defined in protocol spec
 */
-
import enum/message/PayloadType.the

uint8_t[64]     signature   # signature needs to go first to be able to skip it on signature check
uint8_t[20]     senderHash  # hash of the sender to check signature against

int64_t         timestamp   # sender timestamp
uint8_t[10]     nonce       # 10 random bytes
uint64_t        seq         # sequence number

# payload with type
PayloadType     payloadType
uint8_t[Var]    payload
